    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: { lat: 44.4, lng: 26.0},
          zoom: 13
        };

         var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
	      var marker = new google.maps.Marker({
       		position: new google.maps.LatLng(44.4,26.0),
       		title:"Hello World!"
    		});
    		marker.setMap(map);
 			jQuery.ajax({
               url : '/game_page_json',
               dataType : 'json',
               success : function(response) {
                       for (var i = 0; i < response.length; i++) {
                           var hint = response[i];
                           console.log(hint["answer"]);
                           tmpLatLng = new google.maps.LatLng( 44.4 + i * 0.01, 26.0 + i * 0.01);
                           var marker = new google.maps.Marker({
                              map: map,
                              position: tmpLatLng,
                              title : hint["question"]
                           });
                           //bindInfoWindow(marker, map, infowindow, '<b>'+places[p].name + "</b><br>" + places[p].geo_name);
                           marker.setMap(map);
                        }
                  
                  
               }
          }) ;
         


	
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>


